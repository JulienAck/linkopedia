<%- include('../partials/header') %>
<div id="row-container">
    <div id="tab-window">
        <h1>Entités ayant un lien Wikipedia</h1>
        <ul>
            <li><a href="#tab-1">Liste</a></li>
            <li><a href="#tab-2">Créer</a></li>
            <li><a href="#tab-3">Opérations</a></li>
        </ul>
        <div id="tab-1">
            <h2>Dernières entités ayant un lien Wikipédia</h2>
            <ul class="">
                <% for (var i=0; i<entitiesItems.length; i++) { %>
                    <li>
                        <img src="<%-entitiesItems[i].profile_pic_url %>" class="small-profile-pic">
                        <a href='/entities/edit/<%-entitiesItems[i].id %>'><%-entitiesItems[i].name %></a>
                        | <a href='/wikipedia/createEntitiesFromWPLinks/<%-entitiesItems[i].id %>'>Créer entités liées</a>
                        | <a href='/wikipedia/createRelationsFromWPLinks/<%-entitiesItems[i].id %>'>Créer relations liées</a>
                    </li>
                <% } %>
            </ul>
        </div>
        <div id="tab-2">
            <h2>Créer une entité à partir de Wikipédia</h2>
            <form action="/wikipedia/insert" method="post">
                <label for="wikipedia_url">Url</label>
                <input type="text" name="wikipedia_url" />
                <br><input type="submit" value="Créer" />
            </form>
        </div>
        <div id="tab-3">
            <h2>Opérations</h2>
            <a href='/wikipedia/autoCreateLinks'>Créer automatiquement les relations sur toutes les entités solitaires</a>
        </div>
    </div>
</div>
<br class="clear-both" />
<%- include('../partials/footer') %>