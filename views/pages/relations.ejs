        </form>
        <table>
        <% for (var i=0; i<relationsItems.length; i++) { %>
            <tr>
                <td><%-relationsItems[i].source_name %></td><td><%-relationsItems[i].destination_name %></td>
            </tr>
        <% } %>
        </table>
    </div>
</div>
